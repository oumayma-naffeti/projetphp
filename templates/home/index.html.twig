{% extends 'base.html.twig' %}

{% block title %}Accueil - Ma Super Agence{% endblock %}

{% block content %}
<h1>Bienvenue chez Ma Super Agence</h1>

{% if properties is not empty %}
    <h2>Dernières annonces</h2>
    <div class="properties">
        {% for property in properties %}
            <div class="property">
                <h3>{{ property.title }}</h3>
                <p><strong>Localisation:</strong> {{ property.address }}{% if property.no %}, {{ property.no }}{% endif %} {{ property.city }}</p>
                <p><strong>Surface:</strong> {{ property.surface }} m²</p>
                <p><strong>Pièces:</strong> {{ property.rooms }} | <strong>Chambres:</strong> {{ property.bedrooms }}</p>
                <p class="price">{{ property.price }} €</p>
                <a href="{{ path('app_property_show', {'id': property.id}) }}" class="btn">Voir les détails</a>
            </div>
        {% endfor %}
    </div>
{% else %}
    <p>Aucune annonce disponible pour le moment.</p>
{% endif %}
{% endblock %}
