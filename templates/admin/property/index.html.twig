{% extends 'base.html.twig' %}

{% block title %}Gérer les biens{% endblock %}

{% block content %}
<h1>Gérer les biens</h1>

<table>
    <thead>
        <tr>
            <th>Titre du bien</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for property in properties %}
            <tr>
                <td>{{ property.title }}</td>
                <td>
                    <a href="{{ path('admin_property_edit', {'id': property.id}) }}" class="btn">Éditer</a>
                    <a href="{{ path('admin_property_delete', {'id': property.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr?')">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<div style="margin-top: 20px;">
    <a href="{{ path('admin_property_new') }}" class="btn btn-success">Créer un nouveau bien</a>
</div>
{% endblock %}